@{
   ViewData["Title"] = "DataTables";
   Layout = "_LayoutBootGrid";
}

<div class="container mt-5">
  
    <div class="row">
            <div class="col-sm">
                 <button type="button" data-toggle="modal" data-target="#modalCreate" class="btn border-primary mb-3"><i class="fa fa-plus text-primary"></i></button>
            </div>
    </div>

    <table class="table table-striped table-bordered" style="width:100%" id="datatableSW">
        <thead>
                <tr>
                  <th>No</th>
                  <th>Fullname</th>
                  <th>Phone</th>
                  <th>Salary</th>
                  <th>Birth Date</th>
                  <th>Action</th>
                </tr>
        </thead>
        <tbody class="tableSW"></tbody>
    </table>
</div>
<br />


<!-- Modal add -->
<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Employee</h5>
        <button type="button" class="btn close" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
      </div>
      <div class="modal-body">
        <form>
         <div class="row">
              <div class="col-md">
                  <div class="row">
                    <div class="col">
                      <label class="mb-2">First Name</label>
                      <input type="text" id="firstNameInput" class="form-control" autocomplete="off">
                    </div>
                    <div class="col">
                      <label class="mb-2">Last Name</label>
                      <input type="text" id="lastNameInput" class="form-control" autocomplete="off">
                    </div>
                  </div>

                   <div class="row">
                    <div class="col">
                      <label class="mb-2 mt-3">Password</label>
                      <input type="password" id="passwordInput" class="form-control">
                    </div>
                    <div class="col">
                        <div class="form-group">
                        <label class="mt-3" for="exampleFormControlSelect1">University</label>
                        <select class="form-control" id="universityInput"></select>
                   </div>
                 </div>   
                 </div>
                  <div class="row">
                    <div class="col">
                      <label class="mb-2">Salary</label>
                      <input type="number" id="salaryInput" class="form-control"  autocomplete="off">
                    </div>
                    <div class="col">
                      <label class="mb-2">Degree</label>
                      <select class="form-control" id="degreeInput"></select>
                    </div>
                    <div class="col">
                      <label class="mb-2">GPA</label>
                      <input type="text" id="gpaInput" class="form-control"  autocomplete="off">
                    </div>
                  </div>

                  <div class="row mt-3">
                        <div class="col">
                          <label for="exampleInputEmail1" class="mb-2">Email</label>
                          <input type="email" id="emailInput" class="form-control" autocomplete="off">
                        </div>
                        <div class="col">
                          <label for="exampleInputEmail1" class="mb-2">Phone Number</label>
                          <input type="number" id="phoneInput" class="form-control" autocomplete="off">
                        </div>
                  </div>
                            <div class="row">
                                <div class="col-md mt-3">
                                     <div class="form-group">
                                    <label for="exampleFormControlSelect1">Gender</label>
                                    <select class="form-control" id="genderInput"></select>
                               </div>
                                </div>
                                <div class="col-md">
                                     <label  class="mt-3">Birth Date</label>
                                     <input type="date" id="dateInput" class="form-control" autocomplete="off">
                                </div>
                            </div>
              </div>
          </div>
                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="createEmployee()">Save</button>
                    </div>
        
        </form>
      </div>
     
    </div>
  </div>
</div>


<!-- Modal detail -->
<div class="modal fade" id="modalDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title text-capitalize" id="exampleModalLabel">Detail Employee</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body contentData"></div>
         <div class="modal-footer">
             <button type="button"  class="btn btn-danger" data-dismiss="modal">Close</button>
         </div> 
      </div>
   </div>
</div>


<!-- Modal edit -->
<div class="modal fade" id="modalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Employee</h5>
        <button type="button" class="btn close" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
      </div>
      <div class="modal-body">
        <form>
         <div class="row">
              <div class="col-md">

                  <div class="row">
                     <div class="col-md">
                        <input type="hidden" id="nikEdit" class="form-control">
                     </div>
                  </div>

                  <div class="row">
                    <div class="col">
                      <label class="mb-2">First Name</label>
                      <input type="text" id="firstNameEdit" class="form-control">
                    </div>
                    <div class="col">
                      <label class="mb-2">Last Name</label>
                      <input type="text" id="lastNameEdit" class="form-control">
                    </div>
                  </div>

                  <div class="row">
                    <div class="col">
                      <label class="mb-2 mt-3">Salary</label>
                      <input type="number" id="salaryEdit" class="form-control" autocomplete="off">
                    </div>
                    
                  </div>

                  <div class="row mt-3">
                        <div class="col">
                          <label for="exampleInputEmail1" class="mb-2">Email</label>
                          <input type="email" id="emailEdit" class="form-control" autocomplete="off">
                        </div>
                        <div class="col">
                          <label for="exampleInputEmail1" class="mb-2">Phone Number</label>
                          <input type="number" id="phoneEdit" class="form-control" autocomplete="off">
                        </div>
                  </div>
                            <div class="row">
                                <div class="col-md mt-3">
                                     <div class="form-group">
                                    <label for="exampleFormControlSelect1">Gender</label>
                                    <select class="form-control" id="genderEdit">
                                      <option>Pilih</option>
                                      <option value="0">Male</option>
                                      <option value="1">Female</option>
                                    </select>
                               </div>
                                </div>
                                <div class="col-md">
                                     <label  class="mt-3">Birth Date</label>
                                     <input type="date" id="dateEdit" class="form-control" autocomplete="off">
                                </div>
                            </div>
              </div>
          </div>
                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="editEmployee()">Edit</button>
                    </div>
        
        </form>
      </div>
     
    </div>
  </div>
</div>


